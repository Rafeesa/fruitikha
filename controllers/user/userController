// In your login route
const login= (req, res, next) => {
    passport.authenticate("local", (err, user, info) => {
        if (err) return next(err);
        if (!user) {
            req.flash('error_msg', 'Invalid username or password');
            return res.redirect('/login');
        }
        req.logIn(user, (err) => {
            if (err) return next(err);
            req.session.user = user._id; // Set the session user ID here
            return res.redirect('/'); // Redirect to a secure page after login
        });
    })(req, res, next);
};



