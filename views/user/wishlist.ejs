<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WishList</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/assets/css/main.css">


    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

      

        .custom-navbar {
            background-color: #051922;
            padding: 10px 15px;
        }

        .account-menu {
            color: white!important;
            position: relative;
        }

        .account-menu .dropdown-menu {
            background-color: #051922;
            border: none;
            min-width: 150px;
        }

        .account-menu .dropdown-item {
            color: white;
            transition: background-color 0.3s ease;
        }

        .account-menu .dropdown-item:hover {
            background-color: #ff6600;
        }

        .navbar .navbar-nav .nav-link {
            color: white;
        }
        /* Remove background color from thead and striped rows */



        h1 { 
            font-family: 'Times New Roman', serif; 
            font-size: 36px;
            color: #ff6600; 
            margin-bottom: 20px;
            font-weight: 700;
        }

        .wishlist-table img {
            width: 80px;
            height: auto;
            border-radius: 8px;
        }
        .wishlist-table th, .wishlist-table td {
            vertical-align: middle;
        }
        .wishlist-container {
            margin-top: 20px;
            min-height: 80vh;
        }

      
    </style>
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg custom-navbar shadow-sm">
    <div class="container">
        <a class="navbar-brand" href="/">
            <img src="/assets/img/logo.png" alt="Fruitikha" width="120">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                data-bs-target="#navbarNav" aria-controls="navbarNav" 
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav text-center">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/shop">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart">Cart</a>
                </li>
            </ul>
        </div>

        <div class="account-menu dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" 
               data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user"></i> Account
            </a>
            <ul class="dropdown-menu">
                <% if (user) { %>
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                <% } else { %>
                    <li><a class="dropdown-item" href="/login">Login</a></li>
                    <li><a class="dropdown-item" href="/signup">Sign Up</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>
<br><br><br><br>
<!-- Wallet Section -->
<header class="bg-light text-center py-3">
    <h1 class="m-0">My Wishlist</h1>
</header>
<br><br><br>
<table class="table wishlist-table table-striped text-center">
    <thead class="table-hover">
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Price (₹)</th>
        <th scope="col">Discount (%)</th>
        <th scope="col">Sale Price (₹)</th>
        <th scope="col">Actions</th>
        <th scope="col">Remove</th>
      </tr>
    </thead>
    <tbody>
      <% if (wishlist.length === 0) { %>
        <tr>
          <td colspan="7" class="text-center">Your wishlist is empty.</td>
        </tr>
      <% } else { %>
        <% wishlist.forEach(item => { %>
          <tr>
            <td>
              <img
                src="/uploads/product-images/<%= item.productImage[0] %>"
                alt="<%= item.name %>"
                style="width: 80px; height: auto;"
              />
            </td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.productOffer %></td>
            <td>
              <% if (item.salePrice !== undefined && item.salePrice !== null) { %>
                <%= item.salePrice.toFixed(2) %>
              <% } else { %>
                <span>N/A</span>
              <% } %>
            </td>
            <td>
              <form action="/cart/add" method="POST" class="d-inline">
                <input type="hidden" name="productId" value="<%= item._id %>">
                <input type="number" name="quantity" value="1" min="1" max="<%= item.stock %>">
                <button class="btn btn-success btn-sm">Add to Cart</button>
              </form>
            </td>
        
            <td>
                <button 
                  class="btn btn-danger btn-sm" 
                  onclick="removeWishlist('<%= item._id %>')"
                >
                  <i class="fas fa-trash-alt"></i> 
                </button>
              </td>
              
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
  
</div>




<!-- Footer -->
<%- include("../../views/partials/user/footer") %>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"></script>

<script>
function removeWishlist(productId) {
    fetch(`/removeWishlist/${productId}`, {
      method: 'DELETE',
      headers: { 'Content-Type': 'application/json' }
    })
    .then(response => {
      if (response.ok) {
        window.location.reload(); // Reload the page on success
      } else {
        alert('Failed to remove item from wishlist');
      }
    })
    .catch(error => console.error('Error:', error));
  }
  </script>
  
</body>
</html>
