                                onclick="changeMainImage('/uploads/product-images/<%= image %>')"
                            >
                        <% }) %>
                    </div>
                    
                    <div class="product-image">
                        <a href="/uploads/product-images/<%= product.productImage[0] %>" 
                           id="main-product-image-zoom" 
                           class="MagicZoom" 
                           data-options="zoomPosition: inner;">
                            <img 
                                id="main-product-image" 
                                src="/uploads/product-images/<%= product.productImage[0] %>"
                            >
                        </a>
                    </div>
                </div>
            </div>

            <!-- Product Info -->
            <div class="col-lg-6 product-info">
                <h1><%= product.name %></h1>
                <form action="/addToWishlist" method="POST">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="<%= isInWishlist ? 'fas fa-heart' : 'far fa-heart' %>"></i>
                    </button>
                </form>
                

                <!-- Ratings -->
                <div class="ratings mb-3">
                    <div class="star-rating">
                        &#9733;&#9733;&#9733;&#9733;&#9734; <!-- Example: 4 out of 5 stars -->
                    </div>
                    <span class="text-muted">4.5 stars (30 reviews)</span>
                </div>

                <!-- Product Price -->
                <div class="product-price">
                    <% if (product.salePrice < product.price) { %>
                      <p style="color: #e63946;">
                        <%= Math.max(product.category?.categoryOffer || 0, product.productOffer || 0) %>% Off
                      </p>
                      <p style="font-size: 1.5em; font-weight: bold;">
                        ₹<%= product.salePrice.toFixed(2) %> 
                        <span style="text-decoration: line-through;font-size: .50em; color: #888;">
                          ₹<%= product.price.toFixed(2) %>
                        </span>
                      </p>
                    <% } else { %>
                      <p>₹<%= product.price.toFixed(2) %></p>
                    <% } %>
                  </div>
                  
                <div class="stock">
                  <p><%= product.stock %> in stock</p>  
                  </div>


                <!-- Add to Cart Button -->
                <form id="addToCartForm" action="/cart/add" method="POST">
                    <input type="hidden" name="productId" value="<%= product._id %>">
                    <input type="number" name="quantity" value="1" min="1" max="<%= product.stock %>">
                    <button type="submit" class="add-to-cart-btn">Add to Cart</button>
                  </form>
                  <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                    <div class="alert alert-danger">
                        <%= errorMessage %>
                    </div>
                <% } %>
                
                  <!-- Display the error message here 
                  <div id="error-message" style="color: red;"></div>-->
            
                <!-- Description -->
                <div class="description mt-4">
                    <h4>Description:</h4>
                    <p><%= product.description %></p>
                </div>

                <!-- Customer Reviews -->
                <div class="reviews mt-4">
                    <h4>Customer Reviews</h4>
                    <ul>
                        <li><strong>John Doe:</strong> Great product! Loved the quality.</li>
                        <li><strong>Jane Smith:</strong> Really fresh and delivered on time.</li>
                    </ul>
                </div>
            </div>
        </div>
