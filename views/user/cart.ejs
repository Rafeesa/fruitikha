        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
                data-bs-target="#navbarNav" aria-controls="navbarNav" 
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav text-center">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/shop">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/cart">Cart</a>
                </li>
            </ul>
        </div>

        <!-- Account Menu -->
        <div class="account-menu dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" 
               data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user"></i> Account
            </a>
            <ul class="dropdown-menu">
                <% if (user) { %>
                    <li><a class="dropdown-item" href="/logout">Logout</a></li>
                <% } else { %>
                    <li><a class="dropdown-item" href="/login">Login</a></li>
                    <li><a class="dropdown-item" href="/signup">Sign Up</a></li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>

<!-- Shopping Cart Heading -->
<br><br>
<header class="bg-light text-center py-3">
    <h1 class="m-0">Shopping Cart</h1>
</header>

<!-- Cart Section -->
<br>
<section class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <!-- Product Table -->
            <div class="col-lg-8">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Product Image</th>
                                <th scope="col">Product Name</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Total</th>
                                <th scope="col">Remove</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (cartItems.length > 0) { %>
                              <% cartItems.forEach(item => { %>
                                <tr>
                                  <td>
                                    <img 
                                      src="/uploads/product-images/<%= item.productId.productImage[0] %>" 
                                      alt="<%= item.productId.name %>" 
                                      style="width: 80px; height: auto;">
                                  </td>
                                  <td><%= item.productId.name %></td>
                                  <td> ₹<%= Math.round(item.productId.salePrice) %> </td>
                                  <td>
                                    <input 
                                      type="number" 
                                      class="quantity-input form-control" 
                                      style="width: 70px;" 
                                      value="<%= item.quantity %>" 
                                      min="1" 
                                      max="<%= Math.min(item.productId.stock, 5) %>" 
                                      data-product-id="<%= item.productId._id %>"
                                    readonly/>
                                  </td>
                                  <td class="stock"><%= item.productId.stock %> in stock</td>
                                  <td class="subtotal" data-price="<%= item.productId.salePrice %>">
                                   ₹<%= (item.productId.salePrice * item.quantity).toFixed(2) %>
                            
                                  </td>
                                  <td>
                                    <form action="/cart/remove" method="POST" style="display:inline;">
                                      <input type="hidden" name="productId" value="<%= item.productId._id %>">
                                      <button type="submit" class="btn btn-danger">Remove</button>
                                    </form>
                                  </td>
                                </tr>
                              <% }); %>
                            <% } else { %>
                              <tr>
                                <td colspan="7" class="text-center">Your cart is empty.</td>
                              </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pricing Table -->
            <div class="col-lg-4">
                <div class="pricing-table">
                    <h3>Order Summary</h3>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Subtotal</td>
                                <td id="subtotal"> ₹<%= subtotal.toFixed(2) %></td>
                            </tr>
                            <tr>
                                <td>Shipping</td>
                                <td> ₹<%= shippingCost.toFixed(2) %></td>
                            </tr>
                            <tr>
                                <td>Total</td>
                                <td id="total"> ₹<%= total.toFixed(2) %></td>
                            </tr>
                        </tbody>
                    </table>
                    <a href="/checkout" class="btn btn-primary btn-checkout">Proceed to Checkout</a>

                </div>
            </div>
        </div>
    </div>
</section>


<!-- Footer -->
<%- include("../../views/partials/user/footer") %>

